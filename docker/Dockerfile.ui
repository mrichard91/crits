# Build stage - using pnpm for supply chain security
FROM node:20-alpine AS builder

# Enable corepack and activate the exact pnpm version from package.json
RUN corepack enable && corepack prepare pnpm@10.28.2 --activate

WORKDIR /app

# Copy package files
COPY ui/package.json ui/pnpm-lock.yaml* ./

# Install dependencies with pnpm (frozen lockfile for reproducibility)
RUN pnpm install --frozen-lockfile

# Copy source code
COPY ui/ ./

# Build the application
RUN pnpm run build

# Production stage - serve with nginx
FROM nginx:alpine

# Copy built assets
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx config for SPA routing
COPY docker/nginx-ui.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
